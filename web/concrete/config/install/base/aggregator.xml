<?xml version="1.0"?>
<concrete5-cif version="1.0">
    <aggregatorsources>
        <aggregatorsource handle="page" name="Site Page" package="" />
        <aggregatorsource handle="rss_feed" name="RSS Feed" package="" />
    </aggregatorsources>
    <features>
        <feature handle="title" score="1" />
        <feature handle="link" score="1" />
        <feature handle="date_time" score="1" />
        <feature handle="image" score="500" has-custom-class="true" />
        <feature handle="conversation" score="10" has-custom-class="true" />
        <feature handle="description" score="1" />
        <feature handle="featured" score="1000" />
    </features>
    <aggregatoritemtemplatetypes>
        <aggregatoritemtemplatetype handle="tile" package="" />
        <aggregatoritemtemplatetype handle="detail" package="" />
    </aggregatoritemtemplatetypes>
    <aggregatoritemtemplates>
        <aggregatoritemtemplate handle="featured" type="tile" name="Featured Item" package="" fixed-slot-width="6" fixed-slot-height="2" force-default="1">
            <feature handle="description" />
            <feature handle="date_time" />
            <feature handle="link" />
            <feature handle="title" />
            <feature handle="image" />
            <feature handle="featured" />
        </aggregatoritemtemplate>
        <aggregatoritemtemplate handle="title_description" type="tile" name="Title Date &amp; Description" package="">
            <feature handle="description" />
            <feature handle="date_time" />
            <feature handle="link" />
            <feature handle="title" />
        </aggregatoritemtemplate>
        <aggregatoritemtemplate handle="title_date" type="tile" name="Title &amp; Date" package="">
            <feature handle="date_time" />
            <feature handle="link" />
            <feature handle="title" />
        </aggregatoritemtemplate>
        <aggregatoritemtemplate handle="title_date_comments" type="tile" name="Title, Date &amp; Comments" package="" has-custom-class="true">
            <feature handle="date_time" />
            <feature handle="link" />
            <feature handle="title" />
            <feature handle="conversation" />
        </aggregatoritemtemplate>
        <aggregatoritemtemplate handle="thumbnail" type="tile" name="Thumbnail" package="">
            <feature handle="link" />
            <feature handle="image" />
        </aggregatoritemtemplate>
        <aggregatoritemtemplate handle="basic" type="detail" name="Basic" package="">
            <feature handle="title" />
        </aggregatoritemtemplate>
        <aggregatoritemtemplate handle="image" type="detail" name="Large Image" package="">
            <feature handle="image" />
        </aggregatoritemtemplate>
    </aggregatoritemtemplates>
    <featurecategories>
        <featurecategory handle="collection_version" />
        <featurecategory handle="aggregator_item" />
    </featurecategories>

    <permissionkeys>
        <permissionkey handle="edit_aggregators" name="Edit Aggregators" description="Can edit the footprint and items in all aggregators." package="" category="admin">
            <access>
                <group name="Administrators"/>
            </access>
        </permissionkey>
        <permissionkey handle="edit_aggregator_items" name="Edit Aggregator Items" description="" package="" category="aggregator">
            <access>
                <group name="Administrators"/>
            </access>
        </permissionkey>
    </permissionkeys>

</concrete5-cif>
